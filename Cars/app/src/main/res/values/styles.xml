<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

    <style name="TextAppearance.CarTitle" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:padding">@dimen/car_title_padding</item>
        <item name="android:textSize">@dimen/car_title_text_size</item>
    </style>

</resources>
